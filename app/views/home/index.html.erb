<header>
  <div class="my-face">
    <div class="text-helper"></div>
    <%= image_tag 'josh_face_68rem.jpg' %>
  </div>
  <div class="my-face-spacer"></div>

  <div class="headings">
    <h1>Why hello there!</h1>
    <h3>I'm Josh, and I'm a full-stack web developer &amp; software engineer.</h4>
    <h5>For the past year, I've been captivated by code. It's been one hell of a ride.</h6>
  </div>
</header>

<nav follow-scroll nav-highlight sections="projects,skillset,about">
  <ul>
    <li ng-class="{active: home.activeSection === 'projects'}">Projects</li><!-- 
 --><li ng-class="{active: home.activeSection === 'skillset'}">Skillset</li><!--
 --><li ng-class="{active: home.activeSection === 'about'}">About</li><!-- 
 --><li ng-class="{active: home.activeSection === 'blog'}">Blog</li><!-- 
 --><li ng-class="{active: home.activeSection === 'contact'}">Contact</li>
  </ul>
</nav>
<div class="nav-spacer"></div>

<section class="projects">
  <ul>
    <li ng-repeat="project in home.projects" ng-mouseenter="home.focusedProject = project" ng-mouseleave="home.focusedProject = null">
      <div class="project-label" ng-show="home.focusedProject === project">{{project}}</div>
      <div class="backdrop" ng-show="home.focusedProject === project"></div>
      <img ng-src="/assets/{{project | lowercase | normalizeName }}_thumb.png">
    </li>
  </ul> 
</section>

<section class="skillset" style="height: 600px; background: #F00;"></section>

<section class="about" style="height: 600px; background: #00F;"></section>
