<div class="blog-index-wrapper">
  <%= render partial: 'blog_header' %>
  <section class="index width-wrapper">
    <% @posts.each do |p| %>
      <div class="post">
        <% if p.images.any? %>
          <div class="post-header large" style="background-image: url('<%= p.images.first.src %>')">
            <h2 class="title"><%= p.title %></h2>   
            <div class="gradient"></div>
          </div>
        <% else %>
          <div class="post-header small">
            <h2 class="title"><%= p.title %></h2>   
          </div>
          
        <% end %>
        <h6><%= pluralize p.min_read, 'minute' %> to read.</h6>
        <p><%= Shortcode.process(p.content).html_safe %></p>
      </div>
    <% end %>
  </section>
</div>
