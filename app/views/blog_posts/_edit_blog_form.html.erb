<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <ul>  
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.text_field :title, placeholder: 'Title' %>
  <%= f.text_field :subtitle, placeholder: 'Subtitle' %>

  <%= f.submit %>
<% end %>